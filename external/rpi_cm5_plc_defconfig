# Architecture
BR2_aarch64=y
BR2_cortex_a76=y

# Toolchain
BR2_TOOLCHAIN_BUILDROOT=y
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y


# ===== Linux Kernel =====
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_GIT=y
BR2_LINUX_KERNEL_CUSTOM_GIT_REPO_URL="../external/linux-src/linux"
BR2_LINUX_KERNEL_CUSTOM_GIT_VERSION="HEAD"

# Verwende Raspberry Pi bcm2712 defconfig
BR2_LINUX_KERNEL_DEFCONFIG="bcm2712"

# DTS
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="../external/linux-src/linux/arch/arm64/boot/dts/broadcom/linux/bcm2712-rpi-5-b"




# Kernel headers = Kernelversion
BR2_KERNEL_HEADERS_AS_KERNEL=y


# OPTIONAL:
# Eigene Kernel-Konfiguration anwenden
BR2_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="../board/raspberrypi/cm5/linux.config"


# ===== Raspberry Pi Firmware =====
BR2_PACKAGE_RPI_FIRMWARE=y


# ===== Rootfs overlay =====
BR2_ROOTFS_OVERLAY="../board/raspberrypi/cm5/rootfs_overlay"


# ===== Tools =====
BR2_PACKAGE_BUSYBOX_SHOW_OTHERS=y
BR2_PACKAGE_KBD=y
BR2_PACKAGE_EVTEST=y


# ===== Python =====
BR2_PACKAGE_PYTHON3=y

